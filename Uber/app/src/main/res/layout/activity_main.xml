<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/uberImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/uber_logo" />

    <Switch
        android:id="@+id/riderDriverSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="148dp"
        android:gravity="center_vertical|center_horizontal|center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textOff="Rider"
        android:textOn="Driver" />

    <Button
        android:id="@+id/getStartedBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/uberImageView"
        android:layout_below="@+id/riderDriverSwitch"
        android:layout_marginTop="40dp"
        android:onClick="start"
        android:text="Get Started" />

    <TextView
        android:id="@+id/riderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/riderDriverSwitch"
        android:layout_marginTop="4dp"
        android:layout_toStartOf="@+id/riderDriverSwitch"
        android:text="Rider"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/driverTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/riderDriverSwitch"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/riderDriverSwitch"
        android:text="Driver"
        android:textColor="@android:color/darker_gray" />
</RelativeLayout>