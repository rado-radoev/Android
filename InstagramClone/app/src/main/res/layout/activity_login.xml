<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/instragramLogo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/instagram_logo"></ImageView>

    <EditText
        android:id="@+id/usernameTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/instragramLogo"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:gravity="left"
        android:hint="Enter username ..."
        android:inputType="textPersonName"
        android:imeOptions="actionDone"/>

    <EditText
        android:id="@+id/passwordTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/usernameTextField"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="left"
        android:hint="Enter password ..."
        android:inputType="textPassword"
        android:imeOptions="actionDone"/>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordTextField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="signUp"
        android:text="Signup" />

    <TextView
        android:id="@+id/signupOrLoginTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/loginButton"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/loginButton"
        android:clickable="true"
        android:textColor="@android:color/holo_blue_bright"
        android:text="Or, Login" />
</RelativeLayout>